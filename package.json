{
  "name": "harvest-horizon",
  "private": true,
  "version": "0.0.1",
  "description": "Harvest Horizon",
  "main": "server/server.js",
  "author": "Blinter",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production npm run build && node server/server.js",
    "dev": "npm run cleanup && cross-env NODE_ENV=development PORT=3000 concurrently \"nodemon --exitcrash server/server.js\" \"vite --port 5173 --host --strictPort\" \"npm:start:docs\"",
    "dev-frontend": "cross-env NODE_ENV=development vite --port 5173 --host --strictPort",
    "dev-backend": "cross-env NODE_ENV=development PORT=3000 nodemon --exitcrash server/server.js",
    "dev-backend-only": "npm run cleanup:backend && npm run dev-backend",
    "dev-frontend-only": "npm run cleanup:frontend && cross-env NODE_ENV=development vite --port 5173 --host --strictPort",
    "start:docs": "node doc-server/server.js",
    "test": "cross-env NODE_ENV=development vitest run",
    "test-watch": "cross-env NODE_ENV=development vitest",
    "cleanup": "node scripts/cleanup-processes.js",
    "cleanup:frontend": "node scripts/cleanup-processes-frontend.js",
    "cleanup:backend": "node scripts/cleanup-processes-backend.js",
    "build": "cross-env NODE_ENV=production vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{js,jsx}\" \"server/**/*.js\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx}\" \"server/**/*.js\"",
    "format": "prettier --check \"src/**/*.{js,jsx}\" \"server/**/*.js\" \"public/**/*.{js,html}\"",
    "format:fix": "prettier --write \"src/**/*.{js,jsx}\" \"server/**/*.js\" \"public/**/*.{js,html}\"",
    "restart": "npm run cleanup && npm run dev",
    "docs": "jsdoc -c ./jsdoc.conf.json",
    "test:console-errors": "cross-env NODE_ENV=development npx playwright test tests/e2e/console-error-check.spec.js --config=tests/e2e/config/playwright.config.js"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "bootstrap": "^5.3.5",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "formik": "^2.4.6",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonschema": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "mongodb": "^6.16.0",
    "mongoose": "^8.14.1",
    "morgan": "^1.10.0",
    "pg": "^8.15.6",
    "pg-pool": "^3.9.6",
    "phaser": "^3.88.2",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.3",
    "reactstrap": "^9.2.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "terser": "^5.39.0",
    "uuid": "^11.1.0",
    "wait-on": "^8.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/plugin-syntax-jsx": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/preset-env": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.26.0",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.1.3",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.0.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jsdoc": "^4.0.4",
    "jsdom": "^26.1.0",
    "kill-port": "^2.0.1",
    "mongodb-memory-server": "^10.1.4",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  }
}